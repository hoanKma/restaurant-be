generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          String   @id @default(cuid()) 
  name        String
  category    String
  isFavorite  Boolean
  rating      Float
  ratingCount Int
  city        String
  desc        String
  images      Json
  priceRange  String
  featured    Featured? @relation
}

model Featured {
  id             Int       @id @default(autoincrement())
  text           String
  icon           String
  restaurantId   String    @unique // Chuyển đổi thành String để khớp với Restaurant
  restaurant     Restaurant @relation(fields: [restaurantId], references: [id])
}


